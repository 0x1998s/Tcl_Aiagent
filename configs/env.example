# 应用配置
APP_NAME=TCL AI Agent
APP_VERSION=1.0.0
DEBUG=false

# API配置
API_PREFIX=/api

# 数据库配置
DATABASE_URL=postgresql://postgres:password@localhost:5432/tcl_agent
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# ChromaDB配置
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_COLLECTION_NAME=tcl_knowledge

# LLM配置
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
DEFAULT_MODEL=gpt-3.5-turbo
MAX_TOKENS=4000
TEMPERATURE=0.1

# NewAPI配置
NEWAPI_BASE_URL=http://localhost:3000
NEWAPI_API_KEY=your-newapi-key

# Ollama配置
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2:7b

# 向量化配置
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# 安全配置
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# 缓存配置
CACHE_TTL=3600
QUERY_CACHE_TTL=300

# Agent配置
MAX_AGENT_ITERATIONS=10
AGENT_TIMEOUT=300

# 数据处理配置
MAX_ROWS_PER_QUERY=10000
QUERY_TIMEOUT=60

# 可视化配置
CHART_WIDTH=800
CHART_HEIGHT=600
CHART_THEME=light

# 预警配置
ALERT_CHECK_INTERVAL=300
ANOMALY_THRESHOLD=3.0
TREND_THRESHOLD=0.05

# A/B测试配置
MIN_SAMPLE_SIZE=1000
CONFIDENCE_LEVEL=0.95
STATISTICAL_POWER=0.8

# 报告配置
REPORT_TEMPLATE_DIR=./templates
REPORT_OUTPUT_DIR=./reports

# 通知配置
FEISHU_WEBHOOK_URL=your-feishu-webhook-url
DINGTALK_WEBHOOK_URL=your-dingtalk-webhook-url
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
